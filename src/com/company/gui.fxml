    <top>
        <ToolBar xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
            <Pane HBox.hgrow="ALWAYS" ></Pane>
            <MenuBar fx:id="menuBar">
                <menus>
                    <Menu text="Menu">
                        <MenuItem text="Next Puzzle"></MenuItem>
                        <SeparatorMenuItem></SeparatorMenuItem>
                        <MenuItem text="Autocheck"></MenuItem>
                        <SeparatorMenuItem></SeparatorMenuItem>
                        <MenuItem text="Reveal Puzzle"></MenuItem>
                        <SeparatorMenuItem></SeparatorMenuItem>
                        <MenuItem text="Clear Puzzle"></MenuItem>
                    </Menu>
                </menus>
            </MenuBar>
        </ToolBar>
    </top>
    <center>
        <GridPane fx:id="gameBoard" alignment="center">
        </GridPane>
    </center>
</BorderPane>
